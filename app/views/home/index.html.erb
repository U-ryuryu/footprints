<h1>トップページ</h1>

<% if admin_signed_in?%>
  <h2>管理者ログイン中</h2>
  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
  <%= link_to "ユーザー登録", new_user_registration_path %>
  <% current_admin.users.each do |user| %>
    <br><%= link_to user.name , edit_user_id_registration_path(user.id) %>
  <% end %>
<% elsif user_signed_in? %>
  <h2><%= "#{current_user.name}ログイン中" %></h2>
  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
  <%= link_to "ユーザー編集" , edit_user_id_registration_path(current_user.id) %>
<% else %>
  <%= link_to "新規登録", new_admin_registration_path %>
  <%= link_to "管理者ログイン", new_admin_session_path %>
  <%= link_to "ユーザーログイン", new_user_session_path %>
<% end %>