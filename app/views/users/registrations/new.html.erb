<%= render "shared/header" %>

<div class="form_content">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form_header">
      <div class="content_text">新規ユーザー登録</div>
    </div>

    <%= render 'shared/error_messages', model: f.object %> 

    <div class="form">
      <div class="label">
        <%= f.label :name %>
      </div>
      <%= f.text_field :name, class: "field" %>
    </div>
    
    <div class="form">
      <div class="label">
        <%= f.label :email %>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field" %>
    </div>

    <div class="form">
      <div class="label">
        <%= f.label :password %><span class="indispensable">英数字含む６文字以上</span>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "field" %>
    </div>

    <div class="form">
      <div class="label">
        <%= f.label :password_confirmation %>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field" %>
    </div>

    <div class="button_box">
      <%= f.submit "登録", class: "submit" %>
      <%= link_to "キャンセル", root_path, class: "cancel" %>
    </div>
  <% end %>
</div>
