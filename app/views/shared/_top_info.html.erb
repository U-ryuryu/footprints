<% if admin_signed_in? %>
  <div class="top">
    <div class="name"><%= "#{current_admin.name} 様"%></div>
    <div class="info">
      <% if current_admin.image.attached? %>
        <%= image_tag current_admin.image, class: "image" %>
      <% else %>
        <%= image_tag "img_noimage.png", class: "image" %>
      <% end %>
      <div class="text">
        <div class="name">
          <%= "#{current_admin.name} 様"%>
          <span class="indispensable">管理者</span>
        </div>
        <div class="mail"><%= current_admin.email %></div>
        <%= link_to "管理者情報編集", edit_admin_registration_path, class: "link" %>
      </div>
    </div>
  </div>
<% end %>

<% if user_signed_in? %>
  <div class="top">
    <div class="name"><%= "#{current_user.admin.name} "%></div>
    <div class="info">
      <% if current_user.image.attached? %>
        <%= image_tag current_user.image, class: "image" %>
      <% else %>
        <%= image_tag "img_noimage.png", class: "image" %>
      <% end%>
      <div class="text">
        <div class="name">
          <%= "#{current_user.name} 様"%>
        </div>
        <div class="mail"><%= current_user.email %></div>
        <%= link_to "ユーザー情報編集", edit_user_registration_path, class: "link" %>
      </div>
    </div>
  </div>
<% end %>