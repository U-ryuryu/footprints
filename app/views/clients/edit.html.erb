<%= form_with model: @client, url: client_path, local: true do |f| %>
<br>
<%= f.text_field :name, placeholder:"客先名" %>
<br>
<%= f.text_field :tel, placeholder:"電話番号" %>
<br>
<%= f.text_field :postal_code, placeholder:"郵便番号" %>
<br>
<%= f.text_field :address, placeholder:"住所" %>
<br>
<%= f.text_field :charge, placeholder:"担当者" %>
<br>
<%= f.text_field :charge_tel, placeholder:"担当者電話番号" %>
<br>
<%= f.submit "客先情報変更" %><%=link_to 'もどる', root_path %>
<% end %>

<% unless user_signed_in? %>
  <%= button_to "削除", client_path(@client.id), data: { confirm: "本当に削除しますか?" }, method: :delete %>
<% end %>